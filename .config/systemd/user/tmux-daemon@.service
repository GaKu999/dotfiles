#==============================================================================#


[Unit]
Description=Terminal multiplexer daemon (%i)
Documentation=man:tmux(1)

[Service]
ExecStart=/usr/bin/tmux -D -S %t/tmux-%i

Slice=session-tmux.slice
Restart=on-failure

Environment=TMUX_INSTANCE=%i

[Install]
WantedBy=default.target


