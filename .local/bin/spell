#!/bin/sh
# vim:ft=sh:noet:ts=3:sw=3:
# file:$XDG_BIN_DIR/spell
#==============================================================================#


set -a
: ${DICTIONARY:=en_US}
set +a


#==============================================================================#


if [ "$#" -gt 0 ]; then
	echo "$@" | hunspell -a
else
	hunspell -a
fi


#==============================================================================#
#                                 END OF FILE                                  #
#==============================================================================#
