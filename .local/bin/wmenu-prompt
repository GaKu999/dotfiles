#!/bin/sh
# vim:ft=sh:noet:ts=3:sw=3:
# file:$XDG_BIN_DIR/wmenu-prompt
#==============================================================================#


case "$(printf '%s\n' Yes No | wmenu -p"$*")" in
	[Yy]*) exit 0 ;;
esac; exit 1


#==============================================================================#
#                                 END OF FILE                                  #
#==============================================================================#
