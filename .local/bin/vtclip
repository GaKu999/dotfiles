#!/bin/sh
# vim:ft=sh:noet:ts=3:sw=3:
# file:$XDG_BIN_DIR/vtclip
#==============================================================================#


if [ "$#" -gt 0 ]; then
	printf "\033]52;c;%s\033" "$(echo -n "$*" | base64)"
else
	printf "\033]52;c;%s\033" "$(base64)"
fi


#==============================================================================#
#                                 END OF FILE                                  #
#==============================================================================#
