#!/bin/sh
# vim:ft=sh:noet:ts=3:sw=3:
# man:alacritty-msg(1)
# file:$XDG_BIN_DIR/alacritty-msg
#==============================================================================#


exec alacritty msg -s "$XDG_RUNTIME_DIR/alacritty.sock" create-window "$@"


